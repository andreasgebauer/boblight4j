			<lightColor name="green" channel="8" />
			<lightColor name="blue" channel="9" />
		</light>

		<light name="bottom4" hscan="60 80" vscan="80 100">
			<lightColor name="red" channel="10" />
			<lightColor name="green" channel="11" />
			<lightColor name="blue" channel="12" />
		</light>

		<light name="bottom5" hscan="80 100" vscan="80 100">
