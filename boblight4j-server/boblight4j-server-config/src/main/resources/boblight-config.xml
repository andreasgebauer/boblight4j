<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://bolight4j.org/config">
	<global>
		<interface>127.0.0.1</interface>
		<port>19333</port>
	</global>

	<device name="arduino" output="/dev/ttyUSB0" channels="60" type="momo"
