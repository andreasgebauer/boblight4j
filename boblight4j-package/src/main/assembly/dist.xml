<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>target/server</directory>
			<includes>
				<include>**/**</include>
			</includes>
			<outputDirectory>/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/clients</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/clients</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>target/lib/clients</directory>
			<includes>
				<include>*</include>
			</includes>
			<outputDirectory>/clients/lib</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
