<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="${addonName}" name="Boblight4J X11 client service"
	version="${project.version}" provider-name="agebauer">
	<requires>
		<import addon="xbmc.python" version="1.0" />
	</requires>
	<extension point="xbmc.service" library="default.py">
		<provides>executable</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">A Boblight4J connector service</summary>
		<description lang="en">
			This Boblight4J connector service will start the boblight4j client on startup and close it on shutdown
		</description>
	</extension>
</addon>